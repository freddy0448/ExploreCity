<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ExploreCity.ViewModels"
             x:DataType="viewmodel:MainViewModel"
             x:Class="ExploreCity.MainPage">

    <ScrollView>
        <VerticalStackLayout >
            <Image Source="travel_svgrepo_com.png" WidthRequest="120" Margin="10"/>
            <Button Command="{Binding GoToLogInCommand}" Text="Iniciar Sesión" HeightRequest="80" Margin="10, 80"/>
            <Button Command="{Binding GoToSignUpCommand}" Text="Registrate" HeightRequest="80" Margin="10, 0"/>
            <Button Command="{Binding GoToUsageCommand}" Text="Mapa"/>
            <Button Command="{Binding GoToDetailsCommand}" Text="Detalles"/>

            <Label Text="Hecho por: Freddy Villar" HorizontalOptions="Center" TextColor="DarkGray" FontAttributes="Bold" FontSize="15" Padding="90, 170, 90, 10" />
            <Label Text="2021-1800" HorizontalOptions="Center" TextColor="DarkGray" FontAttributes="Bold" FontSize="15" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
